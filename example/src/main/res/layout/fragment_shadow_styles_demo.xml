<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".ShadowStylesDemoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Default -->
        <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
            style="@style/ms9_DefaultShadowStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:ms9_shadowElevation="8dp">

            <TextView
                style="@style/shadow_styles_demo_text"
                android:text="Default"/>
        </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>

        <!-- Default (compat only) -->
        <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
            style="@style/ms9_DefaultShadowStyleCompatOnly"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:ms9_shadowElevation="8dp">

            <TextView
                style="@style/shadow_styles_demo_text"
                android:text="Default\n(compat only)"/>
        </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- NoDisplayPositionAffect -->
        <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
            style="@style/ms9_NoDisplayedPositionAffectShadowStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:ms9_shadowElevation="8dp">

            <TextView
                style="@style/shadow_styles_demo_text"
                android:text="NoDisplayPositionAffect"/>
        </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>

        <!-- NoDisplayPositionAffect (compat only) -->
        <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
            style="@style/ms9_NoDisplayedPositionAffectShadowStyleCompatOnly"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:ms9_shadowElevation="8dp">

            <TextView
                style="@style/shadow_styles_demo_text"
                android:text="NoDisplayPositionAffect\n(compat only)"/>
        </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Composite -->
        <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
            style="@style/ms9_CompositeShadowStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:ms9_shadowElevation="8dp">

            <TextView
                style="@style/shadow_styles_demo_text"
                android:text="Composite"/>
        </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>

        <!-- Composite (compat only) -->
        <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
            style="@style/ms9_CompositeShadowStyleCompatOnly"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:ms9_shadowElevation="8dp">

            <TextView
                style="@style/shadow_styles_demo_text"
                android:text="Composite\n(compat only, less overdraws)"/>
        </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>

    </LinearLayout>

</LinearLayout>